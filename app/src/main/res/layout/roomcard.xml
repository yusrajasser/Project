<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ooo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DDFFFFFF">

        <ImageView
            android:id="@+id/roomimg"
            android:layout_width="226dp"
            android:layout_height="224dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.615"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/room_floor"
            android:layout_width="142dp"
            android:layout_height="34dp"
            android:layout_marginStart="248dp"
            android:text="TextView"
            android:textColor="#376839"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/roomimg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.632" />

        <TextView
            android:id="@+id/bed_rooms"
            android:layout_width="143dp"
            android:layout_height="34dp"
            android:layout_marginStart="244dp"
            android:text="TextView"
            android:textColor="#376839"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/roomimg"
            app:layout_constraintStart_toStartOf="@+id/roomimg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.86" />

        <TextView
            android:id="@+id/room_tel"
            android:layout_width="141dp"
            android:layout_height="37dp"
            android:layout_marginStart="235dp"
            android:text="TextView"
            android:textColor="#376839"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/roomimg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.408" />

        <TextView
            android:id="@+id/room_price"
            android:layout_width="64dp"
            android:layout_height="26dp"
            android:layout_marginStart="326dp"
            android:text="300$"
            android:textColor="#FF0026"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/roomimg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.183" />

        <TextView
            android:id="@+id/room_no"
            android:layout_width="83dp"
            android:layout_height="26dp"
            android:layout_marginStart="235dp"
            android:text="12"
            android:textColor="#376839"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/roomimg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.183" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>